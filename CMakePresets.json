{ 
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 1
  },
  "configurePresets": [
    {
      "name": "linux",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "WITH_DEBUGGER": "ON",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON"
      }
    },

    {
      "name": "gcc_linux",
      "inherits": "linux",
      "binaryDir": "${sourceDir}/build/${presetName}",

      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-fsanitize=address -fsanitize=undefined -fno-sanitize-recover=all -fsanitize=float-divide-by-zero -fsanitize=float-cast-overflow -fno-sanitize=null -fno-sanitize=alignment -Wall -Wextra -Waddress -Wuninitialized -Wreorder -Wconversion -Warith-conversion"
      },
      "environment": {
        "CXX": "g++"
      }
    },

    {
      "name": "clang_linux",
      "inherits": "linux",

      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-stdlib=libc++ -fsanitize=address -fsanitize=undefined -fno-sanitize-recover=all -fsanitize=float-divide-by-zero -fsanitize=float-cast-overflow -fno-sanitize=null -fno-sanitize=alignment -Waddress -Wuninitialized -Wreorder-ctor -Wall -Wextra -Wconversion"
      },

      "environment": {
        "CXX": "clang++-15"
      }
    },

    {
      "name": "msvc",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    },

    {
      "name":"cppcheck",
      "hidden":true,
      "inherits": "gcc_linux",
      "binaryDir": "build_static_analysis",
      "cacheVariables":{
        "CMAKE_CXX_CPPCHECK":"cppcheck;--language=c++;--std=c++20;--inconclusive;--enable=all;-q;--cppcheck-build-dir=${sourceDir}/build_static_analysis"
      }
    },

    {
      "name":"clang-tidy",
      "hidden":true,
      "inherits": "gcc_linux",
      "binaryDir": "build_static_analysis",
      "cacheVariables":{
        "CMAKE_CXX_CLANG_TIDY":"clang-tidy-14;-checks=-*,bugprone-*,performance-*,portability-*"
      }
    },

    {
      "name":"static-analysis",
      "displayName": "cppcheck, clang-tidy",
      "hidden":false,
      "generator":"Ninja",
      "inherits":[
        "cppcheck",
        "clang-tidy"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "STATIC_ANALYSIS": "ON"
      }

    }
  ]
}


